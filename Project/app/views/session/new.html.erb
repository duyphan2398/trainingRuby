<% provide(:title, "Login") %>
<!DOCTYPE html>
<html>
   <head>
        <title>Login</title>
        <style type="text/css">
            body{
              background-color: white
            }
            h1  {
              color: #3c5899;
              transition: transform .2s;
              text-align:center;
            }
            h1:hover{
              transform: scale(1.1);
            }
            main{
              background-color: #d5ccccb5;
              width: 30%;
              height: 120%;
              padding: 25px;
              margin-left: auto;
              margin-right: auto;
              border-radius: 6px;
              box-shadow: 5px 10px 8px #888888;
            }
            input.btn{
              background-color: #3c5899;
              color: white;
              transition: transform .1s;
            }
            input.btn:hover{
              background-color: #5c77b6;
              transform: scale(1.15);
            }
            input.btn:active{
              background-color: #3c5899;
              transform: scale(1.05);
            }
            .form-control{
              border: 1px solid #00000000;

            }
        </style>
   </head>


   <body>
      <!-- HEADER -->


      <h1 class="mt-5 mb-5">Fotobook Login</h1>

      <!-- MAIN -->
      <main>
        <div class="container">
          <div class="row">
            <div class="col-lg-1"></div>
            <div class="col-sm-12 col-lg-10">

              <%= form_for :session, url: login_path do |form| %>





                <div class="text-center">
                  <img  class="m-2 mb-lg-5" src="./assets/user.png">
                </div>



                  <div  class="form-group">


                  <%= form.text_field :email, class: 'form-control',placeholder: 'Email'%>
                  <%= form.password_field :password, class: 'form-control',placeholder: 'Password', html: 'required'  %>
                  <!-- <input  class="form-control"type="text" placeholder="Password" name="" required>
                  <input  class="form-control"type="text" placeholder="Last Name" name="" required> -->
                </div>

                <div class="text-center actions">
                   <%= form.submit 'Log In', class: 'btn mt-3 w-5 mb-4' %>
                  <!-- <input class="btn mt-3 w-50" type="submit" value="Sign Up" name="1" > -->
                </div>


                  <%  flash.each do |name,msg| %>
                    <%= content_tag :div, msg, class: "alert #{name}" %>
                    <% end %>


                <div class="text-center ">
                  <a href="#">Forgot password?</a>
                </div>

              <% end %>
            </div>

          </div>

        </div>

      </main>

      <div class="text-center mt-2">
          <a href="#">Create an account</a>
      </div>
  </body>
</html>